{
  "name": "is-weather-forcast-accurate",
  "version": "0.1.0",
  "description": "The Korea Meteorological Administration is notorious for making wrong weather forecasts. Let's evaluate their scores.",
  "main": "source/server/server.js",
  "scripts": {
    "copy:front": "npx copyfiles -u 2 \"src/frontend/**/*.!(ts)\" out/frontend",
    "build:front": "npx tsc --project src/tsconfig.front.json --outDir out/frontend --rootDir src/frontend && npm run copy:front",
    "build:back": "npx tsc --project src/tsconfig.back.json --outDir out/backend --rootDir src/backend",
    "build": "npm run build:front && npm run build:back",
    "clean": "rm -rf ./out",
    "test": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/ywcheong/is-weather-forcast-accurate.git"
  },
  "keywords": [
    "KMA",
    "Weather",
    "Forecast",
    "Score",
    "Static",
    "AWS"
  ],
  "author": "youngwoon cheong",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ywcheong/is-weather-forcast-accurate/issues"
  },
  "homepage": "https://github.com/ywcheong/is-weather-forcast-accurate#readme",
  "devDependencies": {
    "@types/aws-sdk": "^2.7.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.10",
    "copyfiles": "^2.4.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "aws-sdk": "^2.1657.0"
  }
}
